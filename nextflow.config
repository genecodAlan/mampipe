// Global conda configuration
conda {
  enabled = true
  autoActivate = true
  cacheable = true
}

// Process resource management
process {
    // Default resources
    cpus = 2
    memory = '4 GB'
    time = '2h'
    
    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2
    
    // Resource labels
    withLabel: 'low_mem' {
        memory = '4 GB'
        cpus = 2
        time = '2h'
    }
    
    withLabel: 'medium_mem' {
        memory = '16 GB'
        cpus = 4
        time = '6h'
    }
    
    withLabel: 'high_mem' {
        memory = '32 GB'
        cpus = 8
        time = '12h'
    }
    
    withLabel: 'very_high_mem' {
        memory = '64 GB'
        cpus = 16
        time = '24h'
    }
}
